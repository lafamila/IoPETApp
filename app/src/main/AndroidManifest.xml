<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lafamila.iopet_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.iopet.lafamila.iopet_app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionAndStatusBar">
        </activity>
        <activity
            android:name="com.iopet.lafamila.iopet_app.MedicineActivity"
            android:theme="@style/AppTheme.NoActionAndStatusBar" />
        <activity android:name="com.iopet.lafamila.iopet_app.ChatActivity" />
        <activity android:name="com.iopet.lafamila.iopet_app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iopet.lafamila.iopet_app.LoginActivity" />
        <activity android:name="com.iopet.lafamila.iopet_app.UploadActivity"></activity>
    </application>

</manifest>